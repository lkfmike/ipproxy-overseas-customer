<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ipproxy.overseas.customer.mapper.AccountMapper">

    <resultMap id="AccountResultMap" type="com.ipproxy.overseas.customer.entity.Account">
        <id column="uid" property="uid"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="nickname" property="nickname"/>
        <result column="telegram" property="telegram"/>
        <result column="remark" property="remark"/>
        <result column="balance" property="balance"/>
        <result column="invite_code" property="inviteCode"/>
        <result column="invited_by" property="invitedBy"/>
        <result column="parent_uid" property="parentUid"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <select id="selectByEmail" resultMap="AccountResultMap">
        SELECT uid, email, password, nickname, telegram, remark, balance, invite_code, invited_by, parent_uid, created_at
        FROM account
        WHERE email = #{email}
        LIMIT 1
    </select>

    <select id="countByEmail" resultType="int">
        SELECT COUNT(1)
        FROM account
        WHERE email = #{email}
    </select>

    <insert id="insertAccount" parameterType="com.ipproxy.overseas.customer.entity.Account" useGeneratedKeys="true" keyProperty="uid" keyColumn="uid">
        INSERT INTO account (email, password, balance, invited_by, parent_uid, created_at)
        VALUES (#{email}, #{password}, #{balance}, #{invitedBy}, #{parentUid}, NOW())
    </insert>

</mapper>
